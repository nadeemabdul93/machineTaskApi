            "message"
          ],
          "type": "object",
          "properties": {
            "status": {
              "type": "integer",
              "description": "1 for success 0 for failure"
            },
            "message": {
              "type": "string",
              "description": "message to be displayed in alert"
            }
          }
        }
      }
    }
